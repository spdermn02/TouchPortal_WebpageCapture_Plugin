            "type": "text",
            "default": "No",
            "maxLength":3 
        },
        {
            "name": "Twitch Chat Show Darkmode",
            "type": "text",
            "default": "Yes",
            "maxLength":3 
        },
        {
            "name": "Trovo Chat Enabled",
            "type": "text",
            "default": "No",
            "maxLength":3 
        },
        {
            "name": "Trovo Chat User Name",
            "type": "text",
            "default": ""
        },
        {
            "name": "Trovo Chat Snapshot Time",
            "type": "number",
            "default": "2",
            "minValue": 1
        },
        {
            "name": "Trovo Chat Height",
            "type": "number",
            "default": "600",
            "minValue":300, 
            "maxValue":1200 
        },
        {
            "name": "Trovo Chat Width",
            "type": "number",
            "default": "300",
            "minValue":300, 
            "maxValue":1920 
        }
