{
    "sdk": 3,
    "version": 1000,
    "TPDiscord_Version": "1.0.0",
    "name": "Touch Portal Stream Chat",
    "id": "TouchPortal_StreamChat",
    "plugin_start_cmd": "\"%TP_PLUGIN_FOLDER%TPStreamChat\\touchportal_streamchat.exe\"",
    "configuration": {
        "colorDark": "#23272A",
        "colorLight": "#7289DA"
    },
    "settings": [
        {
