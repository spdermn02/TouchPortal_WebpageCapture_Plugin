            "maxLength":3 
        },
        {
            "name": "Twitch Chat User Name",
            "type": "text",
            "default": ""
        },
        {
            "name": "Twitch Chat Snapshot Time",
            "type": "number",
            "default": "2",
            "minValue": 1
        },
        {
            "name": "Twitch Chat Height",
            "type": "number",
            "default": "600",
            "minValue":300, 
            "maxValue":1200 
        },
        {
            "name": "Twitch Chat Width",
            "type": "number",
            "default": "300",
            "minValue":300, 
            "maxValue":1920 
